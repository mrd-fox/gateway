## = Skillshub Gateway - DEV ENV  =
## ===============================
#
#spring.profiles.active=dev
#server.port=8080
#
## Use local microservices URIs
#spring.cloud.gateway.routes[0].uri=http://localhost:8081
#spring.cloud.gateway.routes[1].uri=http://localhost:8083
#spring.cloud.gateway.routes[2].uri=http://localhost:8082
#
## Disable Keycloak validation for easier dev
#spring.security.oauth2.resourceserver.jwt.issuer-uri=http://localhost:8080/realms/skillshub
#spring.security.oauth2.resourceserver.jwt.jwk-set-uri=http://localhost:8080/realms/skillshub/protocol/openid-connect/certs
#
## Enable detailed logs
#logging.level.org.springframework.cloud.gateway=DEBUG
#logging.level.org.springframework.security=DEBUG

# --- General application settings ---
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# --- Keycloak configuration (local setup) ---
# URL of your local Keycloak instance and realm
KEYCLOAK_ISSUER_URI=http://localhost:8080/realms/skillshub
KEYCLOAK_JWK_URI=http://localhost:8080/realms/skillshub/protocol/openid-connect/certs

# --- Backend route (your monolith backend instance) ---
# Points to your internal backend application (monolith modular)
BACKEND_URI=http://localhost:8081

# --- Logging levels ---
# You can increase to DEBUG while developing to see all routing details
GATEWAY_LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
